<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="85dp"
            android:background="#000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/open_gallery"
            app:layout_constraintTop_toTopOf="@id/imageViewProfile"
            app:layout_constraintLeft_toLeftOf="@id/imageViewProfile"
            app:layout_constraintRight_toRightOf="@id/imageViewProfile"
            android:layout_marginTop="170dp"
            android:src="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_image_black_24dp"
            app:layout_constraintRight_toRightOf="@id/imageViewProfile"
            app:layout_constraintLeft_toLeftOf="@id/imageViewProfile"
            app:layout_constraintTop_toTopOf="@id/open_gallery"
            android:layout_marginTop="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:paddingLeft="12dp"
        android:layout_marginTop="20sp"
        android:hint="Name"
        android:background="@drawable/bg_edit"
        />
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:paddingLeft="12dp"
        android:layout_marginTop="20sp"
        android:hint="E-mail"
        android:background="@drawable/bg_edit"/>
    <Button
        android:id="@+id/button_save"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="Save"
        android:textColor="#fff"
        android:textSize="16dp"
        android:background="#000"/>



</LinearLayout>